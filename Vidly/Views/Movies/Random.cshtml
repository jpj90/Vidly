@model Vidly.ViewModels.RandomMovieViewModel

@{
    ViewBag.Title = "Random";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    var className = Model.Customers.Count > 5 ? "popular" : null;
}

@*
    This is a comment!
    By the way, if the className variable above evaluates to null, the 
    attribute on the h2 element below will not render into the view. 
*@

<h2 class="@className">@Model.Name</h2>

@if (Model.Customers.Count == 0)
{
    <text>No one has rented this movie before.</text>
}
else
{
    <ul>
   @foreach (var customer in Model.Customers)
    {
        <li>@customer.Name</li>    
    }
    </ul>
 }
